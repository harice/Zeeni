			<div class="block-content">
				<ul class="owl">			
					<?php foreach($latestTestimonial as $_item):?>
						<?php if($i % $rows == 0) echo "<li class='testimonial-list'>"; ?>		

							<?php 
								$testimonial_content = "f-col f-col-1 col-sm-6 col-md-8 col-sms-6 col-smb-12";
