								if(empty($avatarLink)) {
									$testimonial_content = "f-col f-col-1 col-sm-12 col-md-12 col-sms-12 col-smb-12";
								}
							?>						
							<div class="testimonial-sidebar-content">
								<div class="avata-post">
									<?php if(!empty($avatarLink)) { ?>
									<div class="testimonial-content-avatar f-col f-col-1 col-sm-6 col-md-4 col-sms-6 col-smb-12">
